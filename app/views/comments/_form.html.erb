<div class="card">
  <h5 class="card-header">Add a comment</h5>
  <div class="card-body">
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
      <div class="mb-3 row">
        <div class="col-sm-2">
          <%= form.label :commenter, class: "col-form-label" %><span class="text-danger">*</span>
        </div>
        <div class="col-sm-10">
          <%= form.text_field :commenter, class: "form-control", required: true %>
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-2">
          <%= form.label :body, class: "col-form-label" %><span class="text-danger">*</span>
        </div>      
        <div class="col-sm-10">
          <%= form.text_area :body, class: "form-control", required: true %>
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-2">
          <%= form.label :status, class: "col-form-label" %><span class="text-danger">*</span>
        </div>
        <div class="col-sm-10">
          <%= form.select :status, Comment.valid_statuses, {}, {class: "form-select"} %>
        </div>
      </div>  
      <div>
        <%= form.submit class: "btn btn-outline-primary" %>
      </div>
    <% end %>  
  </div>
</div>
